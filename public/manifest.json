{
  "manifest_version": 3,
  "name": "Lumos",
  "version": "1.0.0",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/style.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["main-logo.svg", "vite.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}